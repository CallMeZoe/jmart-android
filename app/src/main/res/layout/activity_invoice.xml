<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InvoiceActivity">

    <TextView
        android:id="@+id/invoiceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Invoice User History"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/invoiceStoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Invoice Store"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/black"
        android:backgroundTint="@color/grey"
        android:visibility="visible"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/invoiceUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Invoice User"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/black"
        android:backgroundTint="@color/grey"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/invoiceCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:listitem="@layout/card_view_invoice" />

</LinearLayout>